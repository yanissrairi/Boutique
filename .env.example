# =============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env for local development
#
# Usage: docker compose up -d
# This will automatically use docker-compose.override.yml for dev settings
# =============================================================================

# -----------------------------------------------------------------------------
# Node Environment
# -----------------------------------------------------------------------------
NODE_ENV=development

# -----------------------------------------------------------------------------
# PostgreSQL Database (Docker local)
# -----------------------------------------------------------------------------
# These variables configure the PostgreSQL container running locally
POSTGRES_DB=medusa-store
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Redis Cache (Docker local)
# -----------------------------------------------------------------------------
# Redis container port for local development
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Medusa Backend
# -----------------------------------------------------------------------------
MEDUSA_PORT=9000
MEDUSA_BACKEND_URL=http://localhost:9000

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Add your local frontend URLs here (comma-separated)
STORE_CORS=http://localhost:3000,http://localhost:8000
ADMIN_CORS=http://localhost:7001,http://localhost:9000

# -----------------------------------------------------------------------------
# Authentication Secrets (Development)
# -----------------------------------------------------------------------------
# Simple secrets are OK for local development
JWT_SECRET=supersecret
COOKIE_SECRET=supersecret
